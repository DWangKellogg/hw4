<h1>New Post</h1>

<% if @current_user %>
  <%= form_with model: @post do |form| %>
    <div class="mb-3">
  <p>
    <%= form.label "title", class: "form-label" %>
    <%= form.text_field "title", class: "form-control" %>
  </p>
  <p>
    <%= form.label "description", class: "form-label" %>
    <%= form.text_field "description", class: "form-control" %>
  </p>

  <div class="mb-3">
  <%= form.label "uploaded_image", class: "form-label" %>
  <%= form.file_field "uploaded_image", accept: "image/png,image/jpg,image/jpeg", class: "form-control" %>
  </div>

  <p>
    <%= form.label "posted_on" %>
    <%= form.date_field "posted_on" %>
  </p>
  <p>
    <%= form.submit, class: "btn btn-primary" %>
  </p>
  <%= form.hidden_field "place_id" %>
<% end %>
<% else %>
  You must first <a href="/sessions/new">login</a> to post.
<% end %>

